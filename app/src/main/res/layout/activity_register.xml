<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_yellow"
    tools:context="com.tanmayee.whereismybus.Register">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/accent_yellow"
        android:id="@+id/regButton"
        android:layout_marginBottom="173dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/regUserName"
        android:layout_above="@+id/regUserEmail"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/light_yellow"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="tarun@toga.com"
        android:ems="10"
        android:id="@+id/regUserEmail"
        android:layout_above="@+id/regUserPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/regUserPassword"
        android:layout_above="@+id/regUserConfirmPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:ems="10"
        android:id="@+id/regUserConfirmPassword"
        android:layout_above="@+id/regButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/regTitle"
        android:layout_above="@+id/regUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>