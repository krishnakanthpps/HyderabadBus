<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tanmayee.whereismybus.Register"
    android:touchscreenBlocksFocus="true"
    android:background="@drawable/b12"
    android:id="@+id/main">

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:id="@+id/loginButton"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:textAllCaps="false"
        android:hint="tarun@toga.com"
        android:layout_above="@+id/password"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_yellow"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textAllCaps="false"
        android:id="@+id/password"
        android:layout_above="@+id/operator"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="5dp"
        android:hint="Password"
        android:textColor="@color/light_yellow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Title"
        android:textAllCaps="false"
        android:id="@+id/title"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <!--
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:id="@+id/rememberMeBox"
            android:layout_above="@+id/loginButton"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_marginBottom="35dp"
            android:checked="true" />
    -->

    <TextView
        android:id="@+id/lostPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/lostPassword"
        android:layout_marginBottom="70dp"
        android:textColor="@color/white"
        android:clickable="true" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_alignTop="@+id/lostPassword"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/title"
        android:textColor="@color/white"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operator"
        android:id="@+id/operator"
        android:layout_above="@+id/loginButton"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"

        />

</RelativeLayout>