<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_yellow"
    tools:context="com.tanmayee.whereismybus.ForgotPassword">

    <Button
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Send EMail"
        android:id="@+id/sendMail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/accent_yellow"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="tarun@toga.com"
        android:id="@+id/emailPassword"
        android:textColor="@color/light_yellow"
        android:layout_above="@+id/sendMail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forgot Password"
        android:id="@+id/title"
        android:layout_above="@+id/emailPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</RelativeLayout>